{
  "compilerOptions": {
    /* Basic Options */
    "target": "ESNext",
    "module": "ESNext",
    "outDir": "./dist",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "sourceMap": true,
    "jsx": "react-jsx",

    /* Experimental Node.js module settings */
    "moduleDetection": "force",

    /* Uncomment if transpiling with TypeScript */
    // "declaration": true,
    // "declarationMap": true,
    
    /* Uncomment if building for a library in a monorepo */
    // "composite": true,

    /* Uncomment if your code does NOT run in the DOM */
    // "lib": ["es2022"]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "src/db/index.js",
    "src/app.js",
    "src/constants.js",
    "src/index.js",
    "src/controllers/leaderboard.js",
    "src/utils/APIError.js",
    "src/utils/APIResponse.js",
    "src/utils/asyncHandler.js"
  ],
  "references": [
    { "path": "./tsconfig.node.json" }
  ]
}
